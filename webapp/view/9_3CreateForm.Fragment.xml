<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <VBox class="sapUiSmallMargin">
        <f:Form
            editable="true"
        >
            <f:layout>
                <f:ResponsiveGridLayout
                    labelSpanXL="4"
                    labelSpanL="3"
                    labelSpanM="4"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="4"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="2"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false"
                />
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement label="Rol*">
                            <f:fields>
                                <Input
                                    id="inpCreateRol"
                                    textFormatMode="KeyValue"
                                    placeholder="Busque el rol..."
                                    showValueHelp="true"
                                    valueHelpRequest="handleValueHelpPer_Rol"
                                />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Permiso*">
                            <f:fields>
                                <ComboBox
                                    id="cBoxCreatePer"
                                    change="onChangeCreatePer"
                                    selectionChange="onChangeCreatePer"
                                    selectedKey="LEER"
                                    items="{ path: 'oComboBoxModelCreate>/2/values/0/Permiso'}"
                                >
                                    <core:Item
                                        key="{oComboBoxModelCreate>key}"
                                        text="{oComboBoxModelCreate>text}"
                                    />
                                </ComboBox>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="CatÃ¡logo*">
                            <f:fields>
                                <ComboBox
                                    id="cBoxCreateCat"
                                    change="onChangeCreateCat"
                                    selectionChange="onChangeCreateCat"
                                    selectedKey="PAQUETES"
                                    items="{ path: 'oComboBoxModelCreate>/2/values/1/Catalogo'}"
                                >
                                    <core:Item
                                        key="{oComboBoxModelCreate>key}"
                                        text="{oComboBoxModelCreate>text}"
                                    />
                                </ComboBox>
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>
    </VBox>
</core:FragmentDefinition>