<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <VBox class="sapUiSmallMargin">
        <f:Form
            editable="true"
        >
            <f:layout>
                <f:ResponsiveGridLayout
                    labelSpanXL="4"
                    labelSpanL="3"
                    labelSpanM="4"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="4"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="2"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false"
                />
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement label="ID*/ID Asignación*">
                            <f:fields>
                                <FlexBox
                                    class="columns"
                                >
                                    <Input
                                        id="inpUpdateIdRt"
                                        enabled="false"
                                    >
                                        <layoutData>
                                            <FlexItemData growFactor="1"
                                                styleClass="sapUiTinyMarginEnd" />
                                        </layoutData>
                                    </Input>
                                    <Input
                                        id="inpUpdateIdAsign"
                                        enabled="false"
                                    >
                                        <layoutData>
                                            <FlexItemData growFactor="1"
                                                styleClass="sapUiTinyMarginBegin" />
                                        </layoutData>
                                    </Input>
                                </FlexBox>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Fecha Ingreso*/N° Empleado*">
                            <f:fields>
                                <FlexBox
                                    class="columns"
                                >
                                    <Input
                                        id="inpUpdateFechaIngreso"
                                        enabled="false"
                                    >
                                        <layoutData>
                                            <FlexItemData growFactor="1"
                                                styleClass="sapUiTinyMarginEnd" />
                                        </layoutData>
                                    </Input>
                                    <Input
                                        id="inpUpdateNoEmp"
                                        enabled="false"
                                    >
                                        <layoutData>
                                            <FlexItemData growFactor="1"
                                                styleClass="sapUiTinyMarginBegin" />
                                        </layoutData>
                                    </Input>
                                </FlexBox>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Tipo Uniforme*/Fecha Egreso*">
                            <f:fields>
                                <FlexBox
                                    class="columns"
                                >
                                    <Input
                                        id="inpUpdateTipoUnif"
                                        enabled="false"
                                    >
                                        <layoutData>
                                            <FlexItemData growFactor="1"
                                                styleClass="sapUiTinyMarginEnd" />
                                        </layoutData>
                                    </Input>
                                    <Input
                                        id="inpUpdateFechaEgreso"
                                        enabled="false"
                                    >
                                        <layoutData>
                                            <FlexItemData growFactor="1"
                                                styleClass="sapUiTinyMarginBegin" />
                                        </layoutData>
                                    </Input>
                                </FlexBox>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="¿Cobro Uniforme?*/Cantidad*">
                            <f:fields>
                                <FlexBox
                                    class="columns"
                                >
                                    <Input
                                        id="inpUpdateCobroUnif"
                                        enabled="false"
                                    >
                                        <layoutData>
                                            <FlexItemData growFactor="1"
                                                styleClass="sapUiTinyMarginEnd" />
                                        </layoutData>
                                    </Input>
                                    <Input
                                        id="inpUpdateCantidad"
                                        enabled="false"
                                    >
                                        <layoutData>
                                            <FlexItemData growFactor="1"
                                                styleClass="sapUiTinyMarginBegin" />
                                        </layoutData>
                                    </Input>
                                </FlexBox>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Cuenta*">
                            <f:fields>
                                <Input
                                    id="inpUpdateCuenta"
                                    type="Number"
                                />
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>
    </VBox>
</core:FragmentDefinition>