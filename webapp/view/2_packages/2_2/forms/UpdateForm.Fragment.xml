<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <VBox class="sapUiSmallMargin">
        <MessageStrip
            text="Recuerde que los campos referenciados a este registro, se modificarán."
            type="Warning"
            showIcon="true"
        />
        <f:Form
            editable="true"
        >
            <f:layout>
                <f:ResponsiveGridLayout
                    labelSpanXL="4"
                    labelSpanL="3"
                    labelSpanM="4"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="4"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="2"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false"
                />
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement label="Operador Función*">
                            <f:fields>
                                <Input
                                    id="inpUpdateOpFuncion"
                                    enabled="false"
                                />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Tipo Uniforme*">
                            <f:fields>
                                <Input
                                    id="inpUpdateTipoUniforme"
                                />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Nombre Paquete*">
                            <f:fields>
                                <Input
                                    id="inpUpdatePaquete"
                                />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Descripción">
                            <f:fields>
                                <TextArea
                                    id="inpUpdateDescripcion"
                                    growing="true"
                                    growingMaxLines="10"
                                    width="100%"
                                />
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>
    </VBox>
</core:FragmentDefinition>