<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
    xmlns="sap.m"
>
    <VBox id="VB1Ope">
        <!--****************************************DESCARGAS****************************************-->
        <VBox
            id="VB2_1POpe"
            class="sapUiTinyMargin"
        >
            <Title
                text="Administrador de operadores"
                level="H1"
                class="sapUiTinyMargin"
            />
            <FlexBox class="columns" renderType="Bare">
                <Button
                    text="Descargar documento"
                    icon="sap-icon://download"
                    press="downloadAllCSVOpe"
                >
                    <layoutData>
                        <FlexItemData
                            growFactor="1"
                            baseSize="0"
                            styleClass="sapUiTinyMargin"
                        />
                    </layoutData>
                </Button>
                <Button
                    id="btnDownloadSelectedOpe"
                    text="Descargar seleccionados"
                    icon="sap-icon://multi-select"
                    press="downloadSelectedCSVOpe"
                    enabled="false"
                >
                    <layoutData>
                        <FlexItemData
                            growFactor="1"
                            baseSize="0"
                            styleClass="sapUiTinyMargin"
                        />
                    </layoutData>
                </Button>
                <Button
                    text="Descargar plantilla"
                    icon="sap-icon://excel-attachment"
                    press="downloadTemplateCSVOpe"
                >
                    <layoutData>
                        <FlexItemData
                            growFactor="1"
                            baseSize="0"
                            styleClass="sapUiTinyMargin"
                        />
                    </layoutData>
                </Button>
                <Button
                    text="Subir documento"
                    icon="sap-icon://upload"
                    press="uploadCSVOpe"
                >
                    <layoutData>
                        <FlexItemData
                            growFactor="1"
                            baseSize="0"
                            styleClass="sapUiTinyMargin"
                        />
                    </layoutData>
                </Button>
            </FlexBox>
        </VBox>
        <!--************************************BOTÓNES CRUD*************************************-->
        <VBox
            id="VB2_2Ope"
            class="sapUiTinyMargin"
        >
            <FlexBox class="columns" renderType="Bare">
                <Button
                    id="createButtonOpe"
                    text="Agregar operador"
                    icon="sap-icon://add-product"
                    press="onCreateDialogOpe"
                >
                    <layoutData>
                        <FlexItemData
                            growFactor="1"
                            baseSize="0"
                            styleClass="sapUiTinyMargin"
                        />
                    </layoutData>
                </Button>
                <Button
                    id="updateButtonOpe"
                    text="Modificar operador"
                    icon="sap-icon://edit"
                    press="onUpdateDialogOpe"
                    enabled="false"
                >
                    <layoutData>
                        <FlexItemData
                            growFactor="1"
                            baseSize="0"
                            styleClass="sapUiTinyMargin"
                        />
                    </layoutData>
                </Button>
                <Button
                    id="deleteButtonOpe"
                    text="Eliminar operador"
                    icon="sap-icon://delete"
                    press="onDeleteDialogOpe"
                    enabled="false"
                >
                    <layoutData>
                        <FlexItemData
                            growFactor="1"
                            baseSize="0"
                            styleClass="sapUiTinyMargin"
                        />
                    </layoutData>
                </Button>
            </FlexBox>
        </VBox>
        <!--****************************************TABLA****************************************-->
        <VBox
            id="VB2_3Ope"
            class="sapUiTinyMargin"
        >
            <Table
                id="tableOpe"
                sticky="ColumnHeaders"
                mode="MultiSelect"
                selectionChange="onSelectedItemOpe"
                inset="false"
                growing="true"
                growingThreshold="15"
                paste="onPaste"
                items="{path: 'oDataModel>/PaqOpSet'}"
            >
                <headerToolbar>
                    <OverflowToolbar>
                        <Title
                            text="Tabla de operadores"
                            level="H1"
                        />
                        <ToolbarSpacer />
                        <ComboBox
                            id="comboBoxSearchOpe"
                            change="onChangeOpe"
                            selectionChange="onChangeOpe"
                            width="20%"
                            selectedKey="OpFuncion"
                            items="{ path: 'oComboBoxModelSearch>/1/values'}"
                        >
                            <core:Item
                                key="{oComboBoxModelSearch>key}"
                                text="{oComboBoxModelSearch>text}"
                            />
                        </ComboBox>
                        <SearchField
                            id="searchFieldOpe"
                            search="handleSearchFieldOpe"
                            width="40%"
                        />
                        <Button
                            tooltip="Ver Opciones Ordenar"
                            icon="sap-icon://sort"
                            press="handleSortBtnPressedOpe"
                        />
                        <Button
                            tooltip="Reestablecer datos"
                            icon="sap-icon://reset"
                            press="handleResetBtnConfirmOpe"
                        />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Operador Función" />
                    </Column>
                    <Column>
                        <Text text="Tipo Uniforme" />
                    </Column>
                    <Column>
                        <Text text="Paquete" />
                    </Column>
                    <Column>
                        <Text text="Descripción" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{oDataModel>OpFuncion}" />
                            <Text text="{oDataModel>TipoUnif}" />
                            <Text text="{oDataModel>Paquete}" />
                            <Text text="{oDataModel>Descripcion}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </VBox>
    </VBox>
</core:FragmentDefinition>