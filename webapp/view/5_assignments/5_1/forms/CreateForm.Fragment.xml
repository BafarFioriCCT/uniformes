<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <VBox class="sapUiSmallMargin">
        <f:Form
            editable="true"
        >
            <f:layout>
                <f:ResponsiveGridLayout
                    labelSpanXL="4"
                    labelSpanL="3"
                    labelSpanM="4"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="4"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="2"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false"
                />
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement label="ID Documento*">
                            <f:fields>
                                <Input
                                    id="inpCreateIdDocEv"
                                    type="Number"
                                    textFormatMode="KeyValue"
                                    placeholder="Busque el documento..."
                                    showValueHelp="true"
                                    valueHelpRequest="handleValueHelpDocEv"
                                />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Encargado*">
                            <f:fields>
                                <Input
                                    id="inpCreateEnc"
                                    type="Number"
                                    textFormatMode="KeyValue"
                                    placeholder="Busque el documento..."
                                    showValueHelp="true"
                                    valueHelpRequest="handleValueHelpEnc"
                                />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="N° Empleado Asignado*">
                            <f:fields>
                                <MaskInput
                                    id="inpCreateNoEmp"
                                    mask="99999999"
                                    placeholderSymbol="_"
                                    placeholder="Ingrese un número de empleado"
                                />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Fecha Asignación*">
                            <f:fields>
                                <DatePicker
                                    id="dPickCreateFechaAsign"
                                    placeholder="Seleccione una fecha..."
                                    class="sapUiSmallMarginBottom"
                                />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement>
                            <f:fields>
                                <Title
                                    text="Agregar talla en inventario"
                                    level="H1"
                                    class="sapUiTinyMargin"
                                />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="ID Inventario*">
                            <f:fields>
                                <Input
                                    id="inpCreateIdInv"
                                    type="Number"
                                    textFormatMode="KeyValue"
                                    placeholder="Busque el inventario..."
                                    showValueHelp="true"
                                    valueHelpRequest="handleValueHelpAsign_IdInv"
                                />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Artículo*">
                            <f:fields>
                                <Input
                                    id="inpCreateArticulo"
                                    enabled="false"
                                />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Tipo Uniforme*">
                            <f:fields>
                                <Input
                                    id="inpCreateTipoUnif"
                                    textFormatMode="KeyValue"
                                    placeholder="Busque el tipo de uniforme (Paquete/Operador)..."
                                    showValueHelp="true"
                                    valueHelpRequest="handleValueHelpTipoUnif"
                                />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="ID Talla General*">
                            <f:fields>
                                <Input
                                    id="inpCreateIdTaGr"
                                    type="Number"
                                    textFormatMode="KeyValue"
                                    placeholder="Busque la talla general..."
                                    showValueHelp="true"
                                    valueHelpRequest="handleValueHelpTaGral"
                                />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Talla*">
                            <f:fields>
                                <Input
                                    id="inpCreateTalla"
                                    enabled="false"
                                />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Precio*">
                            <f:fields>
                                <Input
                                    id="inpCreatePrecio"
                                    type="Number"
                                />
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>
    </VBox>
</core:FragmentDefinition>