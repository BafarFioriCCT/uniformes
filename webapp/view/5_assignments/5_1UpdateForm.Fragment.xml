<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <VBox class="sapUiSmallMargin">
        <MessageStrip
            text="Recuerde que los campos referenciados a este registro, se modificarán."
            type="Warning"
            showIcon="true"
        />
        <f:Form
            editable="true"
        >
            <f:layout>
                <f:ResponsiveGridLayout
                    labelSpanXL="4"
                    labelSpanL="3"
                    labelSpanM="4"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="4"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="2"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false"
                />
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement label="ID*/ID Documento Evidencia*">
                            <f:fields>
                                <FlexBox
                                    class="columns"
                                >
                                    <Input
                                        id="inpUpdateIdAsign"
                                        enabled="false"
                                    >
                                        <layoutData>
                                            <FlexItemData growFactor="1"
                                                styleClass="sapUiTinyMarginEnd" />
                                        </layoutData>
                                    </Input>
                                    <Input
                                        id="inpUpdateIdDocEv"
                                        enabled="false"
                                    >
                                        <layoutData>
                                            <FlexItemData growFactor="1"
                                                styleClass="sapUiTinyMarginEnd" />
                                        </layoutData>
                                    </Input>
                                </FlexBox>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Encargado*/Función*">
                            <f:fields>
                                <FlexBox
                                    class="columns"
                                >
                                    <Input
                                        id="inpUpdateEnc"
                                        enabled="false"
                                    >
                                        <layoutData>
                                            <FlexItemData growFactor="1"
                                                styleClass="sapUiTinyMarginEnd" />
                                        </layoutData>
                                    </Input>
                                    <Input
                                        id="inpUpdateFuncion"
                                        enabled="false"
                                    >
                                        <layoutData>
                                            <FlexItemData growFactor="1"
                                                styleClass="sapUiTinyMarginEnd" />
                                        </layoutData>
                                    </Input>
                                </FlexBox>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="División*/Unidad Organizativa*">
                            <f:fields>
                                <FlexBox
                                    class="columns"
                                >
                                    <Input
                                        id="inpUpdateDivision"
                                        enabled="false"
                                    >
                                        <layoutData>
                                            <FlexItemData growFactor="1"
                                                styleClass="sapUiTinyMarginEnd" />
                                        </layoutData>
                                    </Input>
                                    <Input
                                        id="inpUpdateUnidadOrg"
                                        enabled="false"
                                    >
                                        <layoutData>
                                            <FlexItemData growFactor="1"
                                                styleClass="sapUiTinyMarginEnd" />
                                        </layoutData>
                                    </Input>
                                </FlexBox>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="N° Empleado*/Tipo Uniforme*">
                            <f:fields>
                                <FlexBox
                                    class="columns"
                                >
                                    <Input
                                        id="inpUpdateNoEmp"
                                        enabled="false"
                                    >
                                        <layoutData>
                                            <FlexItemData growFactor="1"
                                                styleClass="sapUiTinyMarginEnd" />
                                        </layoutData>
                                    </Input>
                                    <Input
                                        id="inpUpdateTipoUnif"
                                        enabled="false"
                                    >
                                        <layoutData>
                                            <FlexItemData growFactor="1"
                                                styleClass="sapUiTinyMarginEnd" />
                                        </layoutData>
                                    </Input>
                                </FlexBox>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Talla General*">
                            <f:fields>
                                <Input
                                    id="inpUpdateTallaGral"
                                    enabled="false"
                                />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Fecha Asignación*">
                            <f:fields>
                                <DatePicker
                                    id="dPickUpdateFechaAsign"
                                    placeholder="Seleccione una fecha..."
                                    valueFormat="dd.MM.yyyy"
                                    class="sapUiSmallMarginBottom"
                                />
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>
    </VBox>
</core:FragmentDefinition>