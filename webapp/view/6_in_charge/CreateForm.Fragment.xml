<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <VBox class="sapUiSmallMargin">
        <f:Form
            editable="true"
        >
            <f:layout>
                <f:ResponsiveGridLayout
                    labelSpanXL="4"
                    labelSpanL="3"
                    labelSpanM="4"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="4"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="2"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false"
                />
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement label="N° Empleado*">
                            <f:fields>
                                <MaskInput
                                    id="inpCreateNoEmp"
                                    mask="99999999"
                                    placeholderSymbol="_"
                                    placeholder="Ingrese un número de empleado" />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Ciudad 1*/División 1">
                            <f:fields>
                                <FlexBox
                                    class="columns"
                                >
                                    <Input
                                        id="inpCreateCiudad1"
                                    >
                                        <layoutData>
                                            <FlexItemData growFactor="1"
                                                styleClass="sapUiTinyMarginEnd" />
                                        </layoutData>
                                    </Input>
                                    <Input
                                        id="inpCreateDivision1"
                                    >
                                        <layoutData>
                                            <FlexItemData growFactor="1"
                                                styleClass="sapUiTinyMarginBegin" />
                                        </layoutData>
                                    </Input>
                                </FlexBox>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Ciudad 2/División 2">
                            <f:fields>
                                <FlexBox
                                    class="columns"
                                >
                                    <Input
                                        id="inpCreateCiudad2"
                                    >
                                        <layoutData>
                                            <FlexItemData growFactor="1"
                                                styleClass="sapUiTinyMarginEnd" />
                                        </layoutData>
                                    </Input>
                                    <Input
                                        id="inpCreateDivision2"
                                    >
                                        <layoutData>
                                            <FlexItemData growFactor="1"
                                                styleClass="sapUiTinyMarginBegin" />
                                        </layoutData>
                                    </Input>
                                </FlexBox>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Ciudad 3/División 3">
                            <f:fields>
                                <FlexBox
                                    class="columns"
                                >
                                    <Input
                                        id="inpCreateCiudad3"
                                    >
                                        <layoutData>
                                            <FlexItemData growFactor="1"
                                                styleClass="sapUiTinyMarginEnd" />
                                        </layoutData>
                                    </Input>
                                    <Input
                                        id="inpCreateDivision3"
                                    >
                                        <layoutData>
                                            <FlexItemData growFactor="1"
                                                styleClass="sapUiTinyMarginBegin" />
                                        </layoutData>
                                    </Input>
                                </FlexBox>
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>
    </VBox>
</core:FragmentDefinition>