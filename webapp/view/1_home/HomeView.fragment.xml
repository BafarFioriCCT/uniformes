<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
    xmlns="sap.m"
>
    <VBox>
        <VBox>
            <Image
                src="../assets/img/home.png"
                mode="Image"
                width="100%"
                height="100%"
            >
                <layoutData>
                    <FlexItemData growFactor="1" />
                </layoutData>
            </Image>
        </VBox>
        <VBox>
            <FlexBox class="sapUiMediumMargin">
                <GenericTile
                    class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                    header="Total Paquetes"
                    subheader="DPC, Planta, Retail"
                >
                    <TileContent>
                        <NumericContent
                            value="{path: 'oHomeViewValues>/Paquete'}"
                            icon="sap-icon://product"
                            withMargin="false"
                        />
                    </TileContent>
                </GenericTile>
                <GenericTile
                    class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                    header="Total Operadores"
                    subheader="DPC, Planta, Retail"
                >
                    <TileContent>
                        <NumericContent
                            value="{path: 'oHomeViewValues>/Operadores'}"
                            icon="sap-icon://product"
                            withMargin="false"
                        />
                    </TileContent>
                </GenericTile>
                <GenericTile
                    class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                    header="Total Inventario"
                    subheader="Artículos de ropa"
                >
                    <TileContent>
                        <NumericContent
                            value="{path: 'oHomeViewValues>/Inventario'}"
                            icon="sap-icon://inventory"
                            withMargin="false"
                        />
                    </TileContent>
                </GenericTile>
                <GenericTile
                    class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                    header="Total Tallas Generales"
                    subheader="Artículos de ropa"
                >
                    <TileContent>
                        <NumericContent
                            value="{path: 'oHomeViewValues>/TallasGrl'}"
                            icon="sap-icon://measure"
                            withMargin="false"
                        />
                    </TileContent>
                </GenericTile>
                <GenericTile
                    class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                    header="Total Tallas En Inventario"
                    subheader="Artículos de ropa"
                >
                    <TileContent>
                        <NumericContent
                            value="{path: 'oHomeViewValues>/TallasInv'}"
                            icon="sap-icon://measure"
                            withMargin="false"
                        />
                    </TileContent>
                </GenericTile>
            </FlexBox>
            <FlexBox class="sapUiMediumMargin">
                <GenericTile
                    class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                    header="Total Asignaciones"
                    subheader="Artículos de ropa"
                >
                    <TileContent>
                        <NumericContent
                            value="{path: 'oHomeViewValues>/Asignaciones'}"
                            icon="sap-icon://add-employee"
                            withMargin="false"
                        />
                    </TileContent>
                </GenericTile>
                <GenericTile
                    class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                    header="Total Tallas Asignadas"
                    subheader="Artículos de ropa"
                >
                    <TileContent>
                        <NumericContent
                            value="{path: 'oHomeViewValues>/TallasAsig'}"
                            icon="sap-icon://add-employee"
                            withMargin="false"
                        />
                    </TileContent>
                </GenericTile>
                <GenericTile
                    class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                    header="Total Encargados"
                    subheader="Responsables"
                >
                    <TileContent>
                        <NumericContent
                            value="{path: 'oHomeViewValues>/Encargados'}"
                            icon="sap-icon://employee"
                            withMargin="false"
                        />
                    </TileContent>
                </GenericTile>
                <GenericTile
                    class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                    header="Total Evidencias"
                    subheader="Documentos"
                >
                    <TileContent>
                        <NumericContent
                            value="{path: 'oHomeViewValues>/Evidencias'}"
                            icon="sap-icon://documents"
                            withMargin="false"
                        />
                    </TileContent>
                </GenericTile>
                <GenericTile
                    class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                    header="Total Rotaciones"
                    subheader="Empleados"
                >
                    <TileContent>
                        <NumericContent
                            value="{path: 'oHomeViewValues>/Rotaciones'}"
                            icon="sap-icon://employee-rejections"
                            withMargin="false"
                        />
                    </TileContent>
                </GenericTile>
            </FlexBox>
        </VBox>
    </VBox>
</core:FragmentDefinition>
